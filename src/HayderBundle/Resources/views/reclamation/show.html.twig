{% extends 'base.html.twig' %}

{% block body %}
<center>
    <h1>Reclamation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reclamation.etat }}</td>
            </tr>
            <tr>
                <th>Typereclamation</th>
                <td>{{ reclamation.typeReclamation }}</td>
            </tr>
            <tr>
                <th>Textelibre</th>
                <td>{{ reclamation.texteLibre }}</td>
            </tr>
            <tr>
                <th>Piecejointe</th>
                <td><a href="{{ asset('img/') }}{{ reclamation.pieceJointe }}">{{ reclamation.pieceJointe }}</a></td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ reclamation.reponse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reclamation_index') }}">Back to the list</a>
        </li>
        {% if reclamation.etat != 'Traite' %}

        <li>
            <a href="{{ path('reclamation_edit', { 'id': reclamation.id }) }}">Edit</a>
        </li>
        {% endif %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>



</center>
{% endblock %}
